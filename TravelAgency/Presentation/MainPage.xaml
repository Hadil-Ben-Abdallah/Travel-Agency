<Page
    x:Class="TravelAgency.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelAgency"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Page.Resources>
        <!-- COLOR PALETTE -->
        <SolidColorBrush x:Key="ClrOrange" Color="#DF6951"/>
        <SolidColorBrush x:Key="ClrYellow" Color="#F1A501"/>
        <SolidColorBrush x:Key="ClrDarkBlue" Color="#181E4B"/>
        <SolidColorBrush x:Key="ClrTextGray" Color="#5E6282"/>
        <SolidColorBrush x:Key="ClrPurpleLight" Color="#DFD7F9"/>
        <SolidColorBrush x:Key="ClrPurpleDark" Color="#5E3BE1"/>

        <!-- STYLES -->
        <Style x:Key="StlCategory" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ClrTextGray}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StlHeading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ClrDarkBlue}"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/georgiab.ttf#Georgia"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="StlCardTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ClrDarkBlue}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="StlBody" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ClrTextGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="LinkTextStyle" TargetType="TextBlock">
             <Setter Property="Foreground" Value="#212832"/>
             <Setter Property="FontWeight" Value="SemiBold"/>
             <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <ThemeShadow x:Key="SharedShadow" />
    </Page.Resources>

    <Grid>
        <!-- 1. MAIN SCROLLABLE AREA -->
        <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" ViewChanged="MainScrollViewer_ViewChanged">
            <Grid>

                <!-- BACKGROUND BLOB (Scrolls with content) -->
                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1"
                           Source="ms-appx:///Assets/Images/Background.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Stretch="Uniform"
                           Opacity="1"/>
                </Grid>

                <!-- PAGE CONTENT -->
                <StackPanel Padding="0,0,0,50">

                    <!-- ================= STATIC NAVIGATION (Scrolls away) ================= -->
                    <Grid Padding="40,20" MaxWidth="1200" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
       <Image Source="ms-appx:///Assets/Images/Logo.png" HorizontalAlignment="Left" Height="30" Stretch="Uniform" PointerEntered="OnElementPointerEntered"
       PointerExited="OnElementPointerExited" />

                        <!-- Menu -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="60">
                            <!-- Using Borders to handle Pointer events easily for cursor -->
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnNavServicesClick">
                                <TextBlock Text="Services" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnNavDestinationsClick">
                                <TextBlock Text="Destinations" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnNavBookingsClick">
                                <TextBlock Text="Bookings" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnNavTestimonialsClick">
                                <TextBlock Text="Testimonials" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited">
                                <TextBlock Text="Login" FontWeight="SemiBold" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                            <Border BorderBrush="#212832" BorderThickness="1" CornerRadius="4" Padding="15,6" PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited">
                                <TextBlock Text="Sign up" FontWeight="SemiBold" Style="{StaticResource LinkTextStyle}" FontSize="13"/>
                            </Border>
                            <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited">
                                <TextBlock Text="EN âŒ„" Style="{StaticResource LinkTextStyle}"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- ================= HERO SECTION ================= -->
                    <Grid MaxWidth="1150" HorizontalAlignment="Center" Margin="40,40,50,100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Text Content -->
                        <StackPanel VerticalAlignment="Center" Spacing="25" Margin="0,0,20,0">
                            <TextBlock Text="BEST DESTINATIONS AROUND THE WORLD" Foreground="{StaticResource ClrOrange}" FontWeight="Bold" FontSize="14"/>

                            <Grid>
                                <Image Source="ms-appx:///Assets/Images/Underline.png" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None" Margin="100,200,0,0"/>
                                <TextBlock Text="Travel, enjoy and live a new and full life" Style="{StaticResource StlHeading}" FontSize="64" LineHeight="70"/>
                            </Grid>

                            <TextBlock Text="Built Wicket longer admire do barton vanity itself do in it. Preferred to sportsmen it engrossed listening. Park gate sell they west hard for the." Style="{StaticResource StlBody}" MaxWidth="450" HorizontalAlignment="Left"/>

                            <StackPanel Orientation="Horizontal" Spacing="30">
                                <!-- Find Out More Button -->
                                <Button Click="OnFindOutMoreClick" PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited"
                                        Background="{StaticResource ClrYellow}" Foreground="White" CornerRadius="10" Padding="25,15" BorderThickness="0" Shadow="{StaticResource SharedShadow}" Translation="0,0,32">
                                    <TextBlock Text="Find out more" FontWeight="Bold"/>
                                </Button>

                                <!-- Play Demo Button -->
                                <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center"
                                            PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited">
                                    <Grid Width="60" Height="60" Shadow="{StaticResource SharedShadow}" Translation="0,0,32" CornerRadius="30">
                                        <Ellipse Fill="{StaticResource ClrOrange}"/>
                                        <!-- Centered Triangle -->
                                        <Polygon Points="0,0 0,20 16,10" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </Grid>
                                    <TextBlock Text="Play Demo" VerticalAlignment="Center" Foreground="{StaticResource ClrTextGray}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Hero Image -->
                        <Grid Grid.Column="1">
                            <Image Source="ms-appx:///Assets/Images/Hero.png" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                        </Grid>
                    </Grid>

                    <!-- ================= SERVICES SECTION ================= -->
                    <Grid x:Name="ServicesSection" MaxWidth="1200" HorizontalAlignment="Center" Margin="0,0,0,150">
                        <Image Source="ms-appx:///Assets/Images/Illus1.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Stretch="Uniform" Margin="0,0,-80,0"/>
                        <StackPanel Spacing="10">
                            <TextBlock Text="CATEGORY" Style="{StaticResource StlCategory}"/>
                            <TextBlock Text="We Offer Best Services" Style="{StaticResource StlHeading}" HorizontalAlignment="Center" FontSize="36"/>

                            <Grid ColumnSpacing="40" Margin="0,40,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Padding="20" CornerRadius="30" Background="Transparent" Width="200">
                                    <Image Source="ms-appx:///Assets/Images/Category1.png" Height="60" Margin="0,0,0,15"/>
                                    <TextBlock Text="Weather" Style="{StaticResource StlCardTitle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Built Wicket longer admire do barton vanity itself do in it." Style="{StaticResource StlBody}" TextAlignment="Center"/>
                                </StackPanel>

                                <Grid Grid.Column="1" Width="200" Shadow="{StaticResource SharedShadow}" Translation="0,0,40">
                                    <Border Width="70" Height="70" Background="{StaticResource ClrOrange}" CornerRadius="25,0,10,0" Margin="-35,0,0,-35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Opacity="1"/>
                                    <Border Background="White" CornerRadius="30" Padding="20" Margin="0,0,0,0" BorderBrush="#EEE">
                                        <StackPanel>
                                            <Image Source="ms-appx:///Assets/Images/Category2.png" Height="60" Margin="0,0,0,15"/>
                                            <TextBlock Text="Best Flights" Style="{StaticResource StlCardTitle}" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Engrossed listening. Park gate sell they west hard." Style="{StaticResource StlBody}" TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <StackPanel Grid.Column="2" Padding="20" CornerRadius="30" Width="200">
                                    <Image Source="ms-appx:///Assets/Images/Category3.png" Height="60" Margin="0,0,0,15"/>
                                    <TextBlock Text="Local Events" Style="{StaticResource StlCardTitle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Barton vanity itself do in it. Preferd to men it engrossed listening." Style="{StaticResource StlBody}" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Padding="20" CornerRadius="30" Width="200">
                                    <Image Source="ms-appx:///Assets/Images/Category4.png" Height="60" Margin="0,0,0,15"/>
                                    <TextBlock Text="Customization" Style="{StaticResource StlCardTitle}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="We deliver outsourced aviation services for military customers." Style="{StaticResource StlBody}" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- ================= DESTINATIONS SECTION ================= -->
                    <StackPanel x:Name="DestinationsSection" MaxWidth="1200" HorizontalAlignment="Center" Margin="0,0,0,150" Spacing="10">
                        <TextBlock Text="Top Selling" Style="{StaticResource StlCategory}"/>
                        <TextBlock Text="Top Destinations" Style="{StaticResource StlHeading}" HorizontalAlignment="Center" FontSize="36"/>

                        <Grid ColumnSpacing="40" Margin="0,40,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Shadow="{StaticResource SharedShadow}" Translation="0,0,40">
                                <Border CornerRadius="24" Background="White" BorderBrush="#DDD" Padding="0,0,0,20">
                                    <StackPanel Width="290">
                                        <Border CornerRadius="24,24,0,0" Height="400" Background="Gray">
                                            <Image Source="ms-appx:///Assets/Images/Rome.jpg" Stretch="UniformToFill"/>
                                        </Border>
                                        <Grid Margin="20,20,20,0">
                                            <TextBlock Text="Rome, Italy" Style="{StaticResource StlCardTitle}" Margin="0,0,0,0"/>
                                            <TextBlock Text="$5.42k" HorizontalAlignment="Right" Foreground="{StaticResource ClrTextGray}" FontSize="18"/>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="20,15,0,0" Spacing="10">
                                            <FontIcon Glyph="&#xE128;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                            <TextBlock Text="10 Days Trip" Foreground="{StaticResource ClrTextGray}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="1" Shadow="{StaticResource SharedShadow}" Translation="0,0,40">
                                <Border CornerRadius="24" Background="White" BorderBrush="#DDD" Padding="0,0,0,20" >
                                    <StackPanel Width="290">
                                        <Border CornerRadius="24,24,0,0" Height="400" Background="Gray">
                                            <Image Source="ms-appx:///Assets/Images/London.jpg" Stretch="UniformToFill"/>
                                        </Border>
                                        <Grid Margin="20,20,20,0">
                                            <TextBlock Text="London, UK" Style="{StaticResource StlCardTitle}" Margin="0,0,0,0" />
                                            <TextBlock Text="$4.2k" HorizontalAlignment="Right" Foreground="{StaticResource ClrTextGray}" FontSize="18"/>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="20,15,0,0" Spacing="10">
                                            <FontIcon Glyph="&#xE128;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                            <TextBlock Text="12 Days Trip" Foreground="{StaticResource ClrTextGray}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="2" Shadow="{StaticResource SharedShadow}" Translation="0,0,40">
                                <Image Source="ms-appx:///Assets/Images/Illus3.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Stretch="Uniform" Margin="0,0,-60,50"/>
                                <Border CornerRadius="24" Background="White" BorderBrush="#DDD" Padding="0,0,0,20">
                                    <StackPanel Width="290">
                                        <Border CornerRadius="24,24,0,0" Height="400" Background="Gray">
                                            <Image Source="ms-appx:///Assets/Images/Paris.jpg" Stretch="UniformToFill"/>
                                        </Border>
                                        <Grid Margin="20,20,20,0">
                                            <TextBlock Text="Paris, France" Style="{StaticResource StlCardTitle}" Margin="0,0,0,0"/>
                                            <TextBlock Text="$3.5" HorizontalAlignment="Right" Foreground="{StaticResource ClrTextGray}" FontSize="18"/>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="20,15,0,0" Spacing="10">
                                            <FontIcon Glyph="&#xE128;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                            <TextBlock Text="1 Days Trip" Foreground="{StaticResource ClrTextGray}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <!-- ================= BOOKING STEPS SECTION ================= -->
                    <Grid x:Name="BookingSection" MaxWidth="1200" HorizontalAlignment="Center" Margin="20,0,0,150" ColumnSpacing="30" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Steps -->
                        <StackPanel VerticalAlignment="Center" Padding="0,0,40,0" MaxWidth="450">
                            <TextBlock Text="Easy and Fast" Style="{StaticResource StlCategory}" HorizontalAlignment="Left"/>
                            <TextBlock Text="Book your next trip in 3 easy steps" Style="{StaticResource StlHeading}" Margin="0,10,0,30"/>

                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="50" Height="50" Background="{StaticResource ClrYellow}" CornerRadius="13" VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE128;" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                    <TextBlock Text="Choose Destination" FontWeight="Bold" Foreground="{StaticResource ClrTextGray}" FontSize="16"/>
                                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna, tortor tempus." Style="{StaticResource StlBody}"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="50" Height="50" Background="{StaticResource ClrOrange}" CornerRadius="13" VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE825;" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                    <TextBlock Text="Make Payment" FontWeight="Bold" Foreground="{StaticResource ClrTextGray}" FontSize="16"/>
                                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna, tortor tempus." Style="{StaticResource StlBody}"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="50" Height="50" Background="#006380" CornerRadius="13" VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE709;" FontFamily="Segoe MDL2 Assets" Foreground="White"/>
                                </Grid>
                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                    <TextBlock Text="Reach Airport on Selected Date" FontWeight="Bold" Foreground="{StaticResource ClrTextGray}" FontSize="16"/>
                                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna, tortor tempus." Style="{StaticResource StlBody}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Right: Floating Card -->
                        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="ms-appx:///Assets/Images/Booking.png" MaxWidth="420"/>
                        </Grid>
                    </Grid>

                    <!-- ================= TESTIMONIALS ================= -->
                    <Grid x:Name="TestimonialsSection" MaxWidth="1200" HorizontalAlignment="Center" Margin="0,0,0,80" ColumnSpacing="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Text -->
                        <StackPanel VerticalAlignment="Center" MaxWidth="450">
                            <TextBlock Text="TESTIMONIALS" Style="{StaticResource StlCategory}" HorizontalAlignment="Left"/>
                            <TextBlock Text="What People Say About Us." Style="{StaticResource StlHeading}" Margin="0,10,0,40" FontSize="48"/>

                            <!-- Dots -->
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <Ellipse x:Name="Dot1" Width="10" Height="10" Fill="Black"/>
                                <Ellipse x:Name="Dot2" Width="10" Height="10" Fill="#E5E5E5"/>
                                <Ellipse x:Name="Dot3" Width="10" Height="10" Fill="#E5E5E5"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right: Cards Stack -->
                        <Grid Grid.Column="1" >
                            <!-- <Border Width="450" Height="200" VerticalAlignment="Top" Margin="0,80,-60,0" Background="White" BorderBrush="#F7F7F7" BorderThickness="2" CornerRadius="10" Padding="30">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="â€œOn the Windows talking painted pasture yet its express parties use. Sure last upon he same as knew next. Of believed or diverted no.â€" Style="{StaticResource StlBody}" FontSize="16" Margin="0,0,0,25"/>
                                    <TextBlock Text="Chris Thomas" FontWeight="Bold" FontSize="18" Margin="0,0,0,7" Foreground="{StaticResource ClrDarkBlue}"/>
                                    <TextBlock Text="Software Engineer" FontSize="14" Foreground="{StaticResource ClrTextGray}"/>
                                </StackPanel>
                            </Border> -->

                            <Grid VerticalAlignment="Top" Margin="0,0,0,0">
                                <Grid Shadow="{StaticResource SharedShadow}" Translation="0,0,20">
                                    <Border Width="450" Height="200" Background="White" CornerRadius="10" Padding="30">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="TestimonialQuote" Text="â€œOn the Windows talking painted pasture yet its express parties use. Sure last upon he same as knew next. Of believed or diverted no.â€" Style="{StaticResource StlBody}" FontSize="16" Margin="0,0,0,25"/>
                                            <TextBlock x:Name="TestimonialName" Text="Mike Taylor" FontWeight="Bold" FontSize="18" Margin="0,0,0,7" Foreground="{StaticResource ClrDarkBlue}"/>
                                            <TextBlock x:Name="TestimonialRole" Text="CEO of Mike Studios" FontSize="14" Foreground="{StaticResource ClrTextGray}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <Border Width="60" Height="60" CornerRadius="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-30,-30,0,0">
                                    <Border.Background>
                                        <ImageBrush x:Name="TestimonialImage" ImageSource="ms-appx:///Assets/Images/Customer1.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-90,0" Spacing="25">
                                <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnTestimonialUpClick">
                                    <FontIcon Glyph="&#xE70E;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource ClrTextGray}"/>
                                </Border>
                                <Border PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Tapped="OnTestimonialDownClick">
                                    <FontIcon Glyph="&#xE70D;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource ClrDarkBlue}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- ================= LOGOS STRIP ================= -->
                    <Grid MaxWidth="1000" HorizontalAlignment="Center" ColumnSpacing="70" Margin="0,0,0,80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="ms-appx:///Assets/Images/FlightLogo1.png" Width="100" />
                        <Image Grid.Column="1" Source="ms-appx:///Assets/Images/FlightLogo2.png" Width="100" />
                        <Image Grid.Column="2" Source="ms-appx:///Assets/Images/FlightLogo3.png" Width="140" />
                        <Image Grid.Column="3" Source="ms-appx:///Assets/Images/FlightLogo4.png" Width="100" />
                        <Image Grid.Column="4" Source="ms-appx:///Assets/Images/FlightLogo5.png" Width="100" />
                    </Grid>

                    <!-- ================= SUBSCRIBE SECTION ================= -->
                    <Grid MaxWidth="1000" Height="400" Margin="0,0,0,150">
                        <Image Source="ms-appx:///Assets/Images/Illus2.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Stretch="Uniform" Margin="0,0,-60,-30"/>
                        <Border Background="{StaticResource ClrPurpleLight}" CornerRadius="120,20,20,20" Margin="0,30,0,0" >
                            <Grid>
                                <Image Source="ms-appx:///Assets/Images/CTA1.png" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="250" Stretch="Uniform"/>
                                <Image Source="ms-appx:///Assets/Images/CTA2.png" HorizontalAlignment="Right" VerticalAlignment="Top" Height="250" Stretch="Uniform"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
                                    <TextBlock TextAlignment="Center" Text="Subscribe to get information, latest news and other interesting offers about Voyoo" Style="{StaticResource StlCategory}" FontSize="30" TextWrapping="Wrap" MaxWidth="700"/>
                                    <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                                        <TextBox x:Name="EmailInput" PlaceholderText="Your email" Width="350" Height="60" CornerRadius="10" Background="White" BorderThickness="0" VerticalAlignment="Center"/>
                                        <Button Click="OnSubscribeClick" PointerEntered="OnElementPointerEntered" PointerExited="OnElementPointerExited" Background="{StaticResource ClrOrange}" Foreground="White" Height="60" CornerRadius="10" Padding="40,0" BorderThickness="0">
                                            <TextBlock Text="Subscribe" FontSize="16" FontWeight="SemiBold"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Grid Width="60" Height="60" Background="{StaticResource ClrPurpleDark}" CornerRadius="35" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,17,-17,0" Shadow="{StaticResource SharedShadow}" Translation="0,0,32">
                            <FontIcon Glyph="&#xE725;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                <FontIcon.RenderTransform>
                                    <RotateTransform Angle="-30"/>
                                </FontIcon.RenderTransform>
                            </FontIcon>
                        </Grid>
                    </Grid>

                    <!-- ================= FOOTER ================= -->
                    <Grid MaxWidth="1200" Margin="0,50,0,20" HorizontalAlignment="Center" ColumnSpacing="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.8*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel MaxWidth="250" Grid.Column="0">
                            <Image Source="ms-appx:///Assets/Images/Logo.png" HorizontalAlignment="Left" Height="30" Stretch="Uniform" Margin="0,0,0,20"/>
                            <TextBlock Text="Book your trip in minute, get full Control for much longer." Style="{StaticResource StlBody}" FontSize="13"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="10">
                            <TextBlock Text="Company" FontWeight="Bold" Foreground="{StaticResource ClrDarkBlue}" FontSize="18" Margin="0,0,0,20"/>
